= render '/posts/login_header'
.userindex
  - @posts.each do |post|
    .userindex__stripe
    .userindex__text
      .userindex__text__image
        - if post.images.present?
          = image_tag post.images.first.image.url(:medium)
      .userindex__text__title 
        .userindex__text__title__box
          = post.title
        .userindex__text__title__name
          = post.user.nickname
          = post.created_at
        .userindex__text__title__text
    .show__edit
      .show__edit--edit
        = link_to '編集', edit_post_path(post.id)
      .show__edit--des
        = link_to '削除', post_path(post.id), method: :delete
    .userindex__content 
      = simple_format post.text



